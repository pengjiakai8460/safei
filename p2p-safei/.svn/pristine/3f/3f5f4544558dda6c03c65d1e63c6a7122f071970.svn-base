<script type="text/javascript">
	$(function(){
		$(".popup").click(function(){
			var remain_num = <?php echo $this->_var['data']['user_num']; ?>;
			if(remain_num == 0)
			{
				alert('您的抽奖次数为0，赶紧去投资吧！');
				
				$("#popupre").hide();
				window.location.reload();
			}else{
				$.ajax({
					url:"http://www.safeionline.com/member.php?ctl=uc_lottery&act=add_lottery_log",
					data:{num:remain_num},
					type:"post",
					success:function(data){
						var data = jQuery.parseJSON(data);
						if(data.status == 1){

							if(data.id == 11){
								$("#lottery_image").attr("src","/public/lottery/images/cj_j11.png");
							}else if(data.id == 15){
								$("#lottery_image").attr("src","/public/lottery/images/cj_j10.png");
							}
							$("#popupre").show();
						}
					}
				})
			}
		})
	})

	function herfs(){
		window.location.href = "http://www.safei.com";
	}
</script>