{// 引入标签库 }
<tagLib name="html" />
<include file="Public:header" />
<script type="text/javascript">
	function adv(id)
	{
		location.href = ROOT+"?m=VipType&a=index&rel_table=vip_type&rel_id="+id;
	}
	function vip_trash()
    {
        location.href = ROOT+"?m=VipType&a=vip_type_trash";
    }
</script>
<div class="main">
<div class="main_title">VIP等级列表</div>
<div class="blank5"></div>
<div class="button_row">
	<input type="button" class="button" value="{%ADD}" onclick="add();" />
	<input type="button" class="button" value="{%DEL}" onclick="del();" />
	<input type="button" class="button " onclick="vip_trash();" value="回收站" />&nbsp;
</div>
<div class="blank5"></div>
<html:list 
	id="dataTable" 
	style="dataTable" 
	name="deal" 
	checkbox="true" 
	action="true" 
	datasource="list" 
	show="id:{%ID}|50px
		,vip_grade:VIP等级
		,lower_limit|format_price:金额下限
		,upper_limit|format_price:金额上限
		,is_effect|get_is_effect=$deal['id']:{%IS_EFFECT}
		,sort|get_sort=$deal['id']:{%SORT}" 
	actionlist="edit:{%EDIT}, del:{%DEL}" 
	actionwidth="100px"/> 

<div class="blank5"></div>
<div class="page">{$page}</div>
</div>
<include file="Public:footer" />