{include file="inc/header.html"}
<adv adv_id="债权转让列表页顶部广告" />
	<div class="ur_here"><a href="{url x="index" r="index"}">首页</a> > <a href="{url x="index" r="transfer"}">转让列表</a></div>
	<div id="content" class="clearfix"> 
		<div class="f_l filterbox w830">
			<div  id="deallist" name="deallist">
		        <div class="propAttrs clearfix pr {if $scity_id neq 0 || $level neq 0 || $months_type neq 0 || $lefttime neq 0}v{/if}" id="search_condition" {if $scity_id eq 0 && $level eq 0 && $months_type eq 0 && $lefttime eq 0}style="height:180px"{/if}>
					<a href="javascript:void(0);" class="j_more f_blue ps" style="bottom:10px;right:10px;z-index:10;">更多筛选</a>
		            <form action="{url x="index" r="deals" p="cid=$cid"}" method="post" id="searchByConditionForm">
		                {if $cate_list_url}
						<div class="attr">
		                    <div class="attrKey">认证标识：</div>
		                    <div class="attrValues">
								<ul class="av-collapse" id="dashboard">
									{foreach from =$cate_list_url item="cates" key=key}
									<li >
										<a href="{$cates.url}#deallist" {if $cates.id eq $cate_id}class="cur"{/if}>{$cates.name}</a>
									</li>
									{/foreach}								
								</ul>
		                    </div>
		                </div>
						{/if}
						{if $city_urls}
		                <div class="attr">
							<div class="attrKey">区域列表：</div>
							<div class="attrValues">
								<ul class="av-collapse" name="city" id="city">
									{foreach from="$city_urls" item="city" key=key}
		                            <li><a href="{$city.url}#deallist"  {if $city.id eq $city_id} class="cur" {/if}>{$city.name}</a></li>
									{/foreach}
		                        </ul>
		                    </div>
		                </div>
						{if $sub_citys}
						<div class="attr">
							<div class="attrKey">城市列表：</div>
							<div class="attrValues">
								<ul class="av-collapse" name="city" id="city">
									{foreach from="$sub_citys" item="scity" key=key}
		                            <li><a href="{$scity.url}#deallist"  {if $scity.id eq $scity_id} class="cur" {/if}>{$scity.name}</a></li>
									{/foreach}
		                        </ul>
		                    </div>
		                </div>
						{/if}
						{/if}
						
						<div class="attr">
		                    <div class="attrKey">信誉等级：</div>
		                    <div class="attrValues">
								<ul class="av-collapse" name="level" id="level">
									{foreach from =$level_list_url item="ilevel" key=key}
								   <li>
									   <a href="{$ilevel.url}#deallist" {if $level eq $ilevel.id}class="cur"{/if}>{$ilevel.name}{if $key neq 0}以上{/if}</a>
								   </li>
								   {/foreach}
								</ul>
							</div>
		                </div>
		                
		                 <div class="attr">
		                    <div class="attrKey">借款用户：</div>
		                    <div class="attrValues">
								<ul class="av-collapse" name="user_type" id="user_type">
									{foreach from =$user_type_urls item="user_type" key=key}
								   <li>
									   <a href="{$user_type.url}#deallist" {if $is_company eq $user_type.key}class="cur"{/if}>{$user_type.name}</a>
								   </li>
								   {/foreach}
								</ul>
							</div>
		                </div>
		                
						<div class="attr">
		                    <div class="attrKey">回馈利率：</div>
		                    <div class="attrValues">
								<ul class="av-collapse" name="interest" id="interest">
		                           {foreach from =$interest_url item="iinterest" key=key}
								   <li>
									   <a href="{$iinterest.url}#deallist" {if $interest eq $iinterest.interest}class="cur"{/if}>{$iinterest.name}{if $key neq 0}以上{/if}</a>
								   </li>
								   {/foreach}
		                        </ul>
		                    </div>
		                </div>
		                
		             
		                
		                
						<div class="attr">
							<div class="attrKey">借款期限：</div>
							<div class="attrValues">
								<ul class="av-collapse" name="interest" id="months">
									{foreach from="$months_type_url" item="months" key=key}
		                            <li><a href="{$months.url}#deallist" {if $key eq $months_type}class="cur"{/if}>{$months.name}</a></li>
									{/foreach}
		                        </ul>
		                    </div>
		                </div>
						<div class="attr">
		                    <div class="attrKey">剩余时间：</div>
		                    <div class="attrValues">
								<ul class="av-collapse" name="lefttime" id="lefttime">
		                            {foreach from =$lefttime_url item="ilefttime" key=key}
								   <li>
									   <a href="{$ilefttime.url}#deallist" {if $lefttime eq $ilefttime.lefttime}class="cur"{/if}>{$ilefttime.name}{if $key neq 0}以内{/if}</a>
								   </li>
								   {/foreach}
		                        </ul>
		                    </div>
		                </div>
		            </form>
		        </div>
			</div>
			<div class="blank0"></div>
		</div>
		<div class="creditschool-box">
			<div class="f_l creditschool">
				<div class="cs_tit f18">信贷学堂</div>
				<div class="cs_con pt10">
					<ul>
						{insert name="artile_list" datakey="creditschool" cate="信贷学堂" limit="6" tpl="inc/insert_article_list/creditschool.html"}
					</ul>
				</div>
			</div>
		</div>
		<div class="blank0"></div>
	</div>
	<div class="blank20"></div>
</div>

<div class="wrap">
<div class="mainl f_l">
	<div class="mainltit">
		<a {if !$field || $field eq "rate"}class="cur"{/if} href="###" onclick="set_sort('rate','transfer');">默认</a>
		<a {if $field eq "repay_time"}class="cur"{/if} href="###" onclick="set_sort('repay_time','transfer');">剩余期限<i class="iconfont">{if $field neq "repay_time"}&#xe639;{else}{if $field_sort eq 'desc'}&#xe63a;{else}&#xe639;{/if}{/if}</i></a>
		<a {if $field eq "borrow_amount"}class="cur"{/if} href="###" onclick="set_sort('borrow_amount','transfer');">转让价格<i class="iconfont">{if $field neq "borrow_amount"}&#xe639;{else}{if $field_sort eq 'desc'}&#xe63a;{else}&#xe639;{/if}{/if}</i></a>
		<div class="f_r calt">
			<a href="{url x="index" r="tool"}" class="f_r">理财计算器</a>
			<i class="iconfont f_blue" class="f_r">&#xe622;</i>
		</div>
	</div>
	
	<div class="mainlcon transfmainlcon">
	{if $transfer_list}
	{foreach from=$transfer_list item="deal" key=key}
		<div class="mainlbox">
		<div class="f_l">
		<div class="lboxtit"><a href="{$deal.url}" class="f18" title="{$deal.name}">{$deal.name}</a></div>
		<div class="blank0"></div>
		</div>
		<div class="blank10"></div>
		<div class="t1 f_l w150">
			<span><em class="f_red">{function name="format_price" v="$deal.transfer_amount"}</em></span>
			<span>转让金</span>
		</div>
		<div class="t1 f_l">
			<span><em>{$deal.left_lixi_format}</em> </span>
			<span>利息</span>
		</div>
		<div class="t1 f_l">
			<span><em>{$deal.left_benjin_format}</em> </span>
			<span>本金</span>
		</div>
		<div class="t1 f_l w100">
			<span><em>{function name="number_format" v="$deal.rate" f="2"}%</em></span>
			<span>利率</span>
		</div>
		<div class="t1 f_l">
			<span><em>{$deal.how_much_month}/{$deal.repay_time}</em></span>
			<span>待还/总期数</span>
		</div>
			<div class="m3 f_r">
				<a href="{$deal.url}" >
					 {if $deal.t_user_id gt 0}
						<span class="btn_gray f_white w115" style="">已转让</span>
					{else}
						{if $deal.status eq 0}
							<span class="btn_gray f_white w115">已撤销</span>
						{else}
							{if $deal.remain_time lt 0}
							  	<span class="btn_gray f_white w115">逾期还款</span>
							{else}
								<span class="btn_red f_white w115">立即购买</span>
							{/if}
						{/if}
					{/if}
				</a>
			</div>
		</div>
	{/foreach}
	{/if}
	</div>
	<div class="f_r">
		<div class="pages">{$pages}</div>
		<div class="blank20"></div>
	</div>
</div>
<div class="mainr f_r">
	<div class="show-module">
		<div class="sm_tit">理财数据<em>数据透明，一目了然</em></div>
		<div class="sm_con">
			<span>总投资额：</span>
			<em>{$stats.total_load_format} 元</em>
		</div>
		<div class="sm_con">
			<span>P2P会员：</span>
			<em>{$stats.user_count} 位</em>
		</div>
		<div class="sm_con">
			<span>累计投资：</span>
			<em>{$stats.load_count} 次</em>
		</div>
		<div class="sm_con">
			<span>成交笔数：</span>
			<em>{$stats.deal_total_count} 个</em>
		</div>
		<div class="sm_con">
			<span>累计创造收益：</span>
			<em>{$stats.total_rate_format}</em> 元
		</div>
	</div>
	<div class="right_adv">
		<adv adv_id="首页右侧顶部广告" />
	</div>
</div>	
<div class="blank"></div>
</div>

<!-- 旧模板 -->
<div>
<script type="text/javascript">
	jQuery(function(){
		$("#search_condition .j_more").click(function(){
			if(!$("#search_condition").hasClass("v")){
				$("#search_condition").animate({height:"270px"});
				$(".creditschool").animate({height:"260px"});
				$("#search_condition").addClass("v");
				$(".j_more").text("收起");
			}
			else{
				$("#search_condition").animate({height:"180px"});
				$(".creditschool").animate({height:"170px"});
				$("#search_condition").removeClass("v");
				$(".j_more").text("更多筛选");
			}
		});
	});
</script>
{include file="inc/footer.html"}