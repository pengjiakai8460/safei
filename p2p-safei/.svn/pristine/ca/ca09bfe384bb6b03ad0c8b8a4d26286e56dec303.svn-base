{// 引入标签库 }
<tagLib name="html" />
<include file="Public:header" />
<script type="text/javascript" src="__TMPL__Common/js/calendar/calendar.php?lang=zh-cn" ></script>
<load href='__TMPL__Common/js/calendar/calendar.css' />
<load href='__TMPL__Common/js/calendar/calendar.js' />

<load href='__TMPL__Common/style/jquery.autocomplete.css' />
<load href='__TMPL__Common/js/jquery.autocomplete.min.js' />

<div class="main">
<div class="main_title">{$main_title}</div>
<script type="text/javascript">
	function op_edits(id,yz,status)
	{
		window.location.href=ROOT+'?m=PeiziOrder&a=op_edits&id='+id+'&yanzheng='+yz+'&status='+status;
	}
</script>
<div class="blank5"></div>
<div class="search_row">
	<form name="search" action="__APP__" method="get">	

		<label id="start_time_item_title">开始日期:</label><input type="text" class="textbox" name="start_time" value="{$start_time}" style="width:100px" id="p_start_time"  onfocus="return showCalendar('p_start_time', '%Y-%m-%d', false, false, 'p_start_time');" />
		<label id="end_time_item_title">至</label><input type="text" class="textbox" name="end_time" value="{$end_time}" style="width:100px" id="p_end_time" onfocus="return showCalendar('p_end_time', '%Y-%m-%d', false, false, 'p_end_time');" />
		
		配资类型
		<select name="peizi_conf_id">
        	<option value="-1" <if condition="$peizi_conf_id eq '-1' || $type eq ''">selected="selected"</if>>全部</option>
            <foreach name='type_list' item='item'>
            	<option value="{$item.id}" <if condition="$peizi_conf_id eq $item['id']">selected="selected"</if>>{$item.name}</option>
            </foreach>
		</select>
		
		投资者推荐人
		<input type="text" class="textbox J_autoUserName" name="user_name" value = "{$user_name}" />
					
		<input type="hidden" value="PeiziRate" name="m" />
		<input type="hidden" value="<php>echo ACTION_NAME;</php>" name="a" />
		<input type="submit" class="button" value="{%SEARCH}" />
	</form>
</div>
<div class="blank5"></div>

<html:list 
	id="dataTable"
	style="dataTable"
	name="list"
	datasource="list"
	show="id:{%ID}|50px
		,order_sn:实盘单号
		,conf_type_name:订单类型
        ,p_user_name:配资者推荐人
        ,total_money_format:实盘金额
		,stock_money_format:当前资产
		,loss_money_format:盈亏金额
        ,loss_rate_format:盈亏比例
		,begin_date:开始时间
		,invite_borrow_money_format:返利金额"
	actionwidth="100px"/>

<div class="blank5"></div>
<div class="page">{$page}</div>
</div>
<include file="Public:footer" />