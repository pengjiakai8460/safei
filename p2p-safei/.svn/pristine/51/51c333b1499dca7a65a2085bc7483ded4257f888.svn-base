{// 引入标签库 }
<tagLib name="html" />
<include file="Public:header" />
<div class="main">
<div class="main_title">{%ADD}<a href="{:u("Departments/index")}" class="back_list">{%BACK_LIST}</a></div>
<div class="blank5"></div>

<form name="edit" action="__APP__" method="post" enctype="multipart/form-data">
<div class="blank5"></div>
<table class="form conf_tab" cellpadding=0 cellspacing=0 rel="1">
	<tr>
		<td colspan=2 class="topTd"></td>
	</tr>
	<tr>
		<td class="item_title">成员名称:</td>
		<td class="item_input">
			<input type="text" class="textbox require" name="adm_name"  />
		</td>
	</tr>

	<tr>
		<td class="item_title">登陆密码:</td>
		<td class="item_input">
			<input type="password" class="textbox require" name="adm_password"  />
		</td>
	</tr>
	
	<tr>
		<td class="item_title">姓名:</td>
		<td class="item_input">
			<input type="text" class="textbox " name="real_name"  />
		</td>
	</tr>
	
	<tr>
		<td class="item_title">手机:</td>
		<td class="item_input">
			<input type="text" class="textbox " name="mobile"  />
		</td>
	</tr>

	
	<tr>
		<td class="item_title">角色:</td>
		<td class="item_input">
			
			<select name="role_id">
			<option value="0">选择角色</option>
			<foreach name="list" item="role">
				<option value="{$role.id}" >{$role.name}</option>
			</foreach>
			</select>

		</td>
	</tr>
	
	<tr>
		<td class="item_title">所属部门:</td>
		<td class="item_input">
			<select name="pid">
			<option value="0">==所属部门==</option>
			<foreach name="departs" item="departs">
				<option value="{$departs.id}" <if condition="$adm_id eq $departs['id']">selected="selected"</if>>{$departs.adm_name}</option>
			</foreach>
			</select>
		</td>
	</tr>
	<if condition="$is_department neq 1">
	<tr>
		<td class="item_title">提成系数（%）:</td>
		<td class="item_input">
			<input type="textbox" size="5" class="textbox require" name="referrals_rate" value="0"  />%
			<br>
			<span class="tip_span">
				提成金额 = 名下所有投资人加权金额的总和 x 提成系统数<br>
				*天标与月标加权金额的计算公式分别为：【天标：投资金额 × 投资的天数 / 365天】【月标：投资金额 × 投资的月数 / 12个月】
			</span>
		</td>
	</tr>
	</if>
	<tr>
		<td class="item_title">{%IS_EFFECT}:</td>
		<td class="item_input">
			<lable>{%IS_EFFECT_1}<input type="radio" checked="checked" value="1" name="is_effect"></lable>
			<lable>{%IS_EFFECT_0}<input type="radio" value="0" name="is_effect"></lable>
		</td>
	</tr>
	
	<tr>
		<td colspan=2 class="bottomTd"></td>
	</tr>
</table>
<div class="blank5"></div>

	<table class="form" cellpadding=0 cellspacing=0>
		<tr>
			<td colspan=2 class="topTd"></td>
		</tr>
		<tr>
			<td class="item_title"></td>
			<td class="item_input">
			<!--隐藏元素-->
			<input type="hidden" name="id" value="{$vo.id}" />
			<input type="hidden" name="{:conf("VAR_MODULE")}" value="MyManager" />
			<input type="hidden" name="{:conf("VAR_ACTION")}" value="insert" />
			<!--隐藏元素-->
			<input type="submit" class="button" value="{%ADD}" />
			<input type="reset" class="button" value="{%RESET}" />
			</td>
		</tr>
		<tr>
			<td colspan=2 class="bottomTd"></td>
		</tr>
	</table> 	 
</form>


</div>
<include file="Public:footer" />