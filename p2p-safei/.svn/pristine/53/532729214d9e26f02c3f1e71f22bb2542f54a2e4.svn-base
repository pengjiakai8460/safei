<php>
	function gets_status($id,$list){
		if ($list['has_pay'] == 0){
			return '<a href="javascript:edit('.$id.');">编辑</a>&nbsp;<a href="javascript:del('.$id.');">删除</a>&nbsp;';
		}else{
			return '<a href="javascript:edit('.$id.');">编辑</a>';
		}
		
	}
</php>	

