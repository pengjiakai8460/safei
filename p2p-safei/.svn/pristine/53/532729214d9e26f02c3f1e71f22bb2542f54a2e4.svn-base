	id="dataTable" 
	style="dataTable" 
	name="deal" 
	action="true" 
	datasource="list" 
	show="id:{%ID}|50px,stock_date:日期,stock_money|format_price:总资产 ,warning_line|format_price:亏损警戒线,open_line|format_price:亏损平仓线,trade_money|format_price:计息金额,buy_money|format_price:买入金额,sell_money|format_price:卖出成本金额" 
