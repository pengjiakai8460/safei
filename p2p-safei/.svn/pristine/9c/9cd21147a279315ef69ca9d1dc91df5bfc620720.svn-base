<script>
	$(document).ready(function(){
		$(".Arrow-but-up").click(function(){
			$(this).siblings(".content").height(90);
			$(this).siblings(".Arrow-but-down").show();
			$(this).hide();
		});
		$(".Arrow-but-down").click(function(){
			$(this).siblings(".content").height('auto');
			$(this).siblings(".Arrow-but-up").show();
			$(this).hide();
		});
	});
</script>
<script type="text/javascript">

function showdiv(targetid,objN){
   
  var target=document.getElementById(targetid);
  var clicktext=document.getElementById(objN)

        if (target.style.display=="block"){
            target.style.display="none";
        } else {
            target.style.display="block";
        }
   
}
</script>
<script type="text/javascript">
	
	jQuery(function(){
			$(".j_do_interest").click(function(){
			var dltid = $(this).attr("dataid");	
			$.showCfm("确定领取收益？",function(){
				$.ajax({
					url:'{url x="index" r="uc_learn#do_interest"}',
					data:"&dltid="+dltid,
					type:"post",
					dataType:'json',
					success:function(result){
						if(result.status==1){
							$.showSuccess("领取收益成功",function(){
									window.location.reload();
							});
						}
						else{
							$.showErr(result.info);
						}
					},
					error:function(){
						$.showErr("请求数据失败");
					}
				});
			});
		});
		
		$(".J_do_invest").click(function(){
			if(confirm("确定投资吗？"))
			{
				var ajaxurl = '{url x="index" r="uc_learn#do_invest"}';
				var learn_id =  $.trim($("#learn_id").val());
				var money =  $.trim($("#money").val());
				var query = new Object();
				query.learn_id = $.trim($("#learn_id").val());
				query.money = $.trim($("#money").val());
				query.post_type = "json";
				$.ajax({
					url:ajaxurl,
					data:query,
					type:"Post",
					dataType:"json",
					success:function(result){
						if(result.status==1){
							$.showSuccess("投资成功",function(){
								window.location.href = '{url x="index" r="uc_learn#index" p="t=load"}';
							});
						}
						else{
							$.showErr(result.info);
						}
						
					},
					error:function(){
						$.showErr("请求数据失败");
					}
				
				});
			}	

		});

	});

</script>