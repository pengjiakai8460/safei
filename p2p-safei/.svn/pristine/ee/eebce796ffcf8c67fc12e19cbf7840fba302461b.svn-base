<form name="edit_".$k action="__APP__" method="post" enctype="multipart/form-data">
	<table class="form conf_tab" cellpadding=0 cellspacing=0 rel="1">
		<tr>
			<td colspan=4 class="topTd"></td>
		</tr>
		
		
		
		<tr>
				<td class="item_title">配资名称:</td>
				<td class="item_input" colspan=3>
					<if condition="$status eq 1">
						<input type="text" class="textbox require" id = "peizi_name" name="peizi_name" value = "{$vo.peizi_name}" style="width:95%"  />
					<else/>
						{$vo.peizi_name}
					</if>	
				</td>
		</tr>
		
		<tr>
				<td class="item_title">展示图片:</td>
				<td class="item_input" colspan=3>
					<if condition="$old_imgdata_str">
			            <foreach name="old_imgdata_str" item="img_item">
							<p style="float:left">
							<input style=" margin-top: 12px;"  type="radio" name="view_info" <if condition="$vo['view_info'] eq $img_item['img']">checked="checked"</if> value="{$img_item.img}">
							<a href='{$img_item.img}' target="_blank" title="{$img_item.name}"><img width="35" height="35" style="float:left; border:#ccc solid 1px; margin-left:5px;" id="{$img_item.name}" src="{$img_item.img}"></a>
							</p>
						</foreach>
		            </if>
				</td>	
		</tr>
				
		<tr>
				<td class="item_title">配资编号:</td>
				<td class="item_input">
					{$vo.order_sn}
					<span class="tip_span"></span>
				</td>
				<td class="item_title">会员:</td>
				<td class="item_input">
					{$vo.user_id|get_user_name_real}
					<span class="tip_span"></span>
				</td>
		</tr>
		<tr>
				<td class="item_title">总操盘资金:</td>
				<td class="item_input">
					{$vo.total_money_format}
