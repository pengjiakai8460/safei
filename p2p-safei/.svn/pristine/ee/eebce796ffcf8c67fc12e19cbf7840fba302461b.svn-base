						</td>
						<td class="item_title">交易结束时间 :</td>
						<td class="item_input">
							<input type="text" class="textbox require"  id="end_date" name="end_date" value="{$vo.end_date}" onfocus="return showCalendar('end_date', '%Y-%m-%d', false, false, 'end_date');" style="width:130px" />
							<span class="tip_span"></span>
						</td>
				</tr>
		<else/>
					<tr>
					<td class="item_title">交易开始时间 :</td>
					<td class="item_input">
						{$vo.begin_date}
						<span class="tip_span"></span>
					</td>
					<td class="item_title">交易结束时间:</td>
					<td class="item_input">
						{$vo.end_date}
						<span class="tip_span"></span>
					</td>
				</tr>
		</if>

			
		
	
			
		<if condition="$status eq 4">
			<tr >
					<td class="item_title">股票帐户 :</td>
					<td class="item_input">
						<input type="text" class="textbox require" id="stock_sn" name="stock_sn" value="{$vo.stock_sn}" />
						<span class="tip_span"></span>
					</td>
					<td class="item_title">股票密码:</td>
					<td class="item_input">
						<input type="text" class="textbox require" id="stock_pwd" name="stock_pwd" value="{$vo.stock_pwd}" />
						<span class="tip_span"></span>
					</td>
			</tr>
		</if>	
		
		<if condition="$status eq 6 || $status eq 8">
			<tr>
				<td class="item_title">股票账户 :</td>
				<td class="item_input">
