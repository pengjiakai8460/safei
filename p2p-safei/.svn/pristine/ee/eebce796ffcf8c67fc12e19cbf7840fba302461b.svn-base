				<td class="item_input">
					{$vo.lever}
					<span class="tip_span"></span>
				</td>

		</tr>
		
		<tr>

						
				<td class="item_title">申请时间 :</td>
				<td class="item_input">
					{$vo.create_time}
					<span class="tip_span"></span>
				</td>
		
				<td class="item_title">用户盈利比:</td>
				<td class="item_input">
					{$vo.payoff_rate_format}
					<span class="tip_span"></span>
				</td>
						


		</tr>

		<tr>
				<td class="item_title">配资类型:</td>
				<td class="item_input">
					{$vo.conf_type_name}
					<span class="tip_span"></span>
				</td>
						
				<td class="item_title">业务审核费:</td>
				<td class="item_input">
					{$vo.manage_money_format}
