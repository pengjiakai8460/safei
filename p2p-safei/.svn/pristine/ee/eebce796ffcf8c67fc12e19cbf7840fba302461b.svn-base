						<label for="status_7"><input type="radio" name="status" id="status_7" value="7"/>开户失败</label>
					</if>	
						<span class="tip_span"></span>
				</td>
			</tr>
			
			<tr id="op_memo_tr" style="display:none;">
				<td class="item_title">原因:</td>
				<td class="item_input" colspan=3>
					<textarea type="text" id="op_memo" class="textbox require"  name="op_memo" style="width:400px;height:100px" >{$vo.op_memo}</textarea>
				</td>
			</tr>
			
			<tr id="memo_tr" style="display:none;">
				<td class="item_title">备注:</td>
				<td class="item_input" colspan=3>
					<textarea type="text" id="memo" class="textbox" name="memo" style="width:400px;height:100px" >{$vo.memo}</textarea>
				</td>
			</tr>

		<else/>			
			  <tr>
                    <td class="item_title">备注 :</td>
                    <td class="item_input" colspan=3>
                        {$vo.memo}
                        <span class="tip_span"></span>
                    </td>
               </tr>		
		</if>	
			
		<if condition="$status eq 3 || $status eq 5 || $status eq 7">
                <tr>
                    <td class="item_title">失败原因 :</td>
                    <td class="item_input" colspan=3>
                        {$vo.op_memo}
                        <span class="tip_span"></span>
                    </td>
                </tr>
         </if>
            
		<tr>
			<td colspan=4 class="bottomTd"></td>
		</tr>
		
	<if condition="$status eq 1 || $status eq 2 || $status eq 4 || $status eq 6">

			<tr>
				<td class="item_title"></td>
				<td class="item_input"  colspan=3>
				<!--隐藏元素-->
				<input type="hidden" name="id" value="{$vo.id}" />
				<input type="hidden" name="{:conf("VAR_MODULE")}" value="PeiziOrder" />
				<input type="hidden" name="{:conf("VAR_ACTION")}" value="update" />
				<!--隐藏元素-->
				<if condition="$status eq 6">
					<input type="hidden" name="status" value="8" />
