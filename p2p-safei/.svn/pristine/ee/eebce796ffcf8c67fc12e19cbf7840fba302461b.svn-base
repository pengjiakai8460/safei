					</td>
					
					<td class="item_title">投资者分利:</td>
					<td class="item_input">
						{$vo.invest_payoff_fee_format}
						<span class="tip_span"></span>
					</td>
			</tr>
		</if>
		
		<if condition="$status eq 1 || $status eq 2 || $status eq 4">
			<tr>
				<td class="item_title">审核操作 :</td>
				<td class="item_input" colspan=3>
					<if condition="$status eq 1">
						<label for="status_2"><input type="radio" name="status" id="status_2" value="2"/>审核通过</label>
						<label for="status_3"><input type="radio" name="status" id="status_3" value="3"/>审核失败</label>
					<elseif condition="$status eq 2" />
